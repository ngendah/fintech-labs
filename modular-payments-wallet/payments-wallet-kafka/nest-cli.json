{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "root": "apps/api",
  "monorepo": true,
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/api/tsconfig.app.json"
  },
  "projects": {
    "api": {
      "type": "application",
      "root": "apps/api",
      "entryFile": "main",
      "sourceRoot": "apps/api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "fraud-detection-service": {
      "type": "application",
      "root": "apps/fraud-detection-service",
      "entryFile": "main",
      "sourceRoot": "apps/fraud-detection-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/fraud-detection-service/tsconfig.app.json"
      }
    },
    "kyc-service": {
      "type": "application",
      "root": "apps/kyc-service",
      "entryFile": "main",
      "sourceRoot": "apps/kyc-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/kyc-service/tsconfig.app.json"
      }
    },
    "notification-service": {
      "type": "application",
      "root": "apps/notification-service",
      "entryFile": "main",
      "sourceRoot": "apps/notification-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/notification-service/tsconfig.app.json"
      }
    }
  }
}
